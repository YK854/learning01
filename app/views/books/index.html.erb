<h2>新規投稿</h2>
<div class="form-main">
  <%= form_with model:@list, url: books_path, local:true do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_field :body %>
    <%= f.submit '投稿' %>
  <% end %>
</div>
<div>
  <%= link_to '戻る', root_path %>
</div>

<h2>book一覧画面</h2>
<div>
  <% @lists.each do |list| %>
    <p>タイトル</p>
    <%= link_to book_path(list) do %>
      <%= list.title %>
    <% end %>
    <p>ボディー</p>
    <%= list.body %>
  <% end %>
</div>